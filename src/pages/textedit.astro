---
import Layout from "../components/Layout.astro";
---

<Layout>
	<div class="p-4 h-screen flex justify-center">
		<div class="w-5/6 mt-24">
			<h2 class="text-2xl font-bold mb-4">Edit Journal Entry</h2>
			<textarea
				class="textarea textarea-primary h-96 w-full mb-4"
				placeholder="Write your thoughts..."></textarea>
			<div class="flex justify-end gap-2">
				<button class="btn btn-outline btn-secondary">Cancel</button>
				<button class="btn btn-primary">Save</button>
			</div>
		</div>
	</div>
</Layout>
